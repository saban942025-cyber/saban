    <!-- 2. OneSignal SDK -->
    <script src="https://cdn.onesignal.com/sdks/web/v16/OneSignalSDK.page.js" defer></script>
    <script>
      window.OneSignalDeferred = window.OneSignalDeferred || [];
      OneSignalDeferred.push(async function(OneSignal) {
        await OneSignal.init({
          appId: "de3834d3-1e11-40af-96d2-b25eda821c8f", // Using the same detected App ID
        });
        OneSignal.User.addTag("app_name", "admin_dashboard");
      });
    </script>

    <!-- 3. Firebase SDK (Modern Modular v11+) -->
    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-app.js";
        import { getAuth, signInAnonymously, signInWithCustomToken } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-auth.js";
        import { getFirestore, collection, query, onSnapshot, getCount, setLogLevel, where } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-firestore.js";

        // --- Config & Init ---
        const firebaseConfig = JSON.parse(typeof __firebase_config !== 'undefined' ? __firebase_config : '{}');
        const appId = typeof __app_id !== 'undefined' ? __app_id : 'default-app-id';
        let db, auth, userId;

        // --- UI & Utility ---
        const SmartLog = (module, message, level = 'info') => {
            console[level](`[${module}] ${level.toUpperCase()}:`, message);
        };

        const showError = (title, message) => {
            const modal = document.getElementById('error-modal');
            const titleEl = document.getElementById('error-title');
            const textEl = document.getElementById('error-text');
            if (modal) modal.classList.remove('hidden');
            if (titleEl) titleEl.textContent = title;
            if (textEl) textEl.textContent = message;
        };

        const updateKPI = (id, value) => {
            const el = document.getElementById(id);
            if (el) {
                el.textContent = value;
            }
        };

        /**
         * Fetches and updates KPI stats from Firestore.
         */
        async function updateDashboardStats() {
            // CORRECTED PATHS: Use public-facing, secure paths
            const ordersPath = `artifacts/${appId}/public/data/orders`;
            const driversPath = `artifacts/${appId}/public/data/drivers`;

            try {
                // Get total orders
                const ordersCol = collection(db, ordersPath);
                const ordersSnapshot = await getCount(ordersCol);
                updateKPI('kpi-total-orders', ordersSnapshot.data().count);

                // Get open tasks (example: status is 'PENDING' or 'IN_TRANSIT')
                const openOrdersQuery = query(ordersCol, where('status', 'in', ['PENDING', 'IN_TRANSIT']));
                const openOrdersSnapshot = await getCount(openOrdersQuery);
                updateKPI('kpi-open-tasks', openOrdersSnapshot.data().count);
                
                // Get active drivers (example: status is 'ONLINE')
                const driversCol = collection(db, driversPath);
                const activeDriversQuery = query(driversCol, where('status', '==', 'ONLINE'));
                const activeDriversSnapshot = await getCount(activeDriversQuery);
                updateKPI('kpi-active-drivers', activeDriversSnapshot.data().count);

                SmartLog('Firestore', 'KPIs updated successfully.');
            } catch (e) {
                SmartLog('Firestore.Error', e, 'error');
                // Don't show a blocking error, just log it.
                console.error("Failed to update KPIs: ", e);
                if (e.message.includes("permission-denied")) {
                     showError("שגיאת הרשאות", "לא ניתן לטעון מדדים. בדוק את חוקי האבטחה (Security Rules) של Firestore.");
                }
            }
        }

        /**
         * Sets up UI listeners.
         */
        function setupUIListeners() {
            // Dark Mode Toggle
            const toggle = document.getElementById('dark-mode-toggle');
            toggle.addEventListener('click', () => {
                document.body.classList.toggle('dark');
                localStorage.setItem('darkMode', document.body.classList.contains('dark'));
            });

            if (localStorage.getItem('darkMode') === 'true') {
                document.body.classList.add('dark');
            }

            // OneSignal Bell
            const bell = document.getElementById('onesignal-bell');
            bell.addEventListener('click', () => {
                OneSignalDeferred.push(function(OneSignal) {
                    SmartLog('OneSignal', 'Prompting for push notifications.');
                    OneSignal.Slidedown.promptPush();
                });
            });

            // Error Modal Close
            const closeErrorBtn = document.getElementById('close-error-btn');
            closeErrorBtn.addEventListener('click', () => {
                document.getElementById('error-modal').classList.add('hidden');
            });
        }
        
        /**
         * Main function to start the application.
         */
        async function main() {
            SmartLog('Init', 'Admin Dashboard v34.5 (Refined) Initializing...');
            
            // --- FIX: Guard Clause for Firebase Config ---
            if (!firebaseConfig.projectId) {
                SmartLog('Auth.Error', 'Firebase config is missing or invalid. "projectId" is required.', 'error');
                showError('שגיאת הגדרה קריטית', 'Firebase config is missing or invalid. "projectId" is required. Please check environment variables.');
                return; // Stop execution
            }
            // --- End Fix ---

            const app = initializeApp(firebaseConfig);
            db = getFirestore(app);
            auth = getAuth(app);
            setLogLevel('Debug');

            try {
                if (typeof __initial_auth_token !== 'undefined' && __initial_auth_token) {
                    await signInWithCustomToken(auth, __initial_auth_token);
                    SmartLog('Auth', 'Signed in with custom token.');
                } else {
                    await signInAnonymously(auth);
                    SmartLog('Auth', 'No token provided, signed in anonymously.');
                }

                userId = auth.currentUser.uid;
                SmartLog('Auth', `Auth successful. User ID: ${userId}`);
                
                document.getElementById('user-id-display').textContent = `User: ${userId.substring(0, 10)}...`;

                setupUIListeners();
                updateDashboardStats(); // Fetch initial stats

            } catch (error) {
                SmartLog('Auth.Error', error, 'error');
                console.error("Auth Error: ", error);
                showError(`שגיאת אימות: ${error.message}`);
            }
        }

        // --- Start App ---
        document.addEventListener('DOMContentLoaded', main);
    </script>

    <!-- 4. Custom Styles -->
